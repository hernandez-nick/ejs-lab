<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= `${restaurant.name} - Full Menu` %>
    </title>


</head>

<body>

<%- include('./partials/nav') %>
    
    <h1>Full Menu</h1>

    <% const allowedCategories = ['mains', 'desserts', 'sides']; %>
    <% const categoryLabels = { mains: 'Mains', desserts: 'Desserts', sides: 'Sides' }; %>

    <% allowedCategories.forEach(category => { %>
        <% const items = restaurant.menu.filter(item => item.category === category); %>
        <% if (items.length) { %>
            <h2><%= categoryLabels[category] %></h2>
            <% items.forEach(item => { %>
                <h3>
                    <%= item.name %>
                <% if (item.rating === 5) { %>⭐<% } %>
                </h3>
                <p>Price: $<%= item.price %></p>
                <p>Rating: <%= item.rating %>/5</p>
                <p><%= item.details %></p>
            <% }) %>
        <% } %>
    <% }) %>

<h6>⭐ = GUEST FAVORITE</h6>
    
</body>